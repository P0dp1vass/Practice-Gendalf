# API ключ OpenAI
OPENAI_API_KEY=your_actual_openai_api_key_here

# Настройки API
API_HOST=0.0.0.0
API_PORT=8081

# URLs для клиентских приложений
LOCAL_API_URL=http://localhost:8081
OPENAI_API_URL=http://localhost:8082

# Для разработки в Docker Compose (автоматически заменяется на внутренние хосты)
# LOCAL_API_URL=http://transcription-corrector:8081
# OPENAI_API_URL=http://transcription-corrector-openai:8081

# Кэширование моделей (опционально, по умолчанию используются стандартные пути)
# NLTK_DATA=/root/nltk_data
# HF_HOME=/root/.cache/huggingface
# TORCH_HOME=/root/.cache/torch

# Отключение Silero Text Enhancement для проблематичных текстов
# USE_SILERO_TE=false 